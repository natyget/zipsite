<!-- Contact Section -->
<section class="press-spread press-spread--contact" id="press-contact">
  <div class="press-spread__container">
    <div class="press-spread__header">
      <h2 class="press-spread__title">Contact Us</h2>
      <p class="press-spread__subtitle">We respond to press inquiries within one business day.</p>
    </div>
    
    <div class="press-contact-section">
      <!-- Contact Information -->
      <div class="press-contact__info">
        <div class="press-contact__item">
          <h3 class="press-contact__item-title">Press</h3>
          <p class="press-contact__item-value">
            <a href="mailto:press@pholio.studio">press@pholio.studio</a>
          </p>
          <p class="press-contact__item-description">Media inquiries, interview requests, and editorial coverage.</p>
        </div>
        
        <div class="press-contact__item">
          <h3 class="press-contact__item-title">Partnerships</h3>
          <p class="press-contact__item-value">
            <a href="mailto:partners@pholio.studio">partners@pholio.studio</a>
          </p>
          <p class="press-contact__item-description">Agency partnerships, integrations, and collaboration opportunities.</p>
        </div>
        
        <div class="press-contact__item">
          <h3 class="press-contact__item-title">Investors</h3>
          <p class="press-contact__item-value">
            <a href="mailto:invest@pholio.studio">invest@pholio.studio</a>
          </p>
          <p class="press-contact__item-description">Investment inquiries and business opportunities.</p>
        </div>
      </div>
      
      <!-- Contact Form -->
      <form class="press-contact__form" action="https://formsubmit.co/press@pholio.studio" method="POST">
        <div class="press-contact__field">
          <label for="contact-name" class="press-contact__label">Name</label>
          <input type="text" id="contact-name" name="name" class="press-contact__input" required>
        </div>
        
        <div class="press-contact__field">
          <label for="contact-email" class="press-contact__label">Email</label>
          <input type="email" id="contact-email" name="email" class="press-contact__input" required>
        </div>
        
        <div class="press-contact__field">
          <label for="contact-message" class="press-contact__label">Message</label>
          <textarea id="contact-message" name="message" rows="5" class="press-contact__textarea" required></textarea>
        </div>
        
        <input type="hidden" name="_subject" value="Pholio Press Inquiry">
        <button type="submit" class="press-contact__submit button button-primary">Send Inquiry</button>
      </form>
    </div>
  </div>
</section>
