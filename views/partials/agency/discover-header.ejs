<!-- Discover Page Header -->
<section class="agency-discover-header">
  <div class="agency-discover-header__content">
    <div class="agency-discover-header__main">
      <h1 class="agency-discover-header__title">Discover Talent</h1>
      <p class="agency-discover-header__subtitle">Browse the global directory of discoverable models and invite them to apply</p>
    </div>
    
    <div class="agency-discover-header__actions">
      <div class="agency-discover-header__search">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"/>
          <path d="m21 21-4.35-4.35"/>
        </svg>
        <input 
          type="text" 
          placeholder="Search by name, location, or keywords..." 
          class="agency-discover-header__search-input"
          id="discover-search-input"
        />
      </div>
      <div class="agency-discover-header__sort">
        <label for="discover-sort" class="agency-discover-header__sort-label">Sort:</label>
        <select id="discover-sort" class="agency-discover-header__sort-select">
          <option value="az">A-Z</option>
          <option value="city">City</option>
          <option value="newest">Newest First</option>
        </select>
      </div>
      <button class="agency-discover-header__btn agency-discover-header__btn--icon" id="discover-filters-toggle" title="Toggle Filters">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"/>
        </svg>
        <span>Filters</span>
      </button>
    </div>
  </div>
  
  <div class="agency-discover-header__meta" id="discover-results-count">
    <!-- Results count will be populated by JavaScript -->
  </div>
</section>

