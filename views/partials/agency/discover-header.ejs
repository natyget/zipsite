<!-- Discover Hero Search Section -->
<section class="discover-hero">
  <div class="discover-hero__content">
    <div class="discover-hero__intro">
      <h1 class="discover-hero__title">Find your next face</h1>
      <p class="discover-hero__subtitle">Discover models from our global network</p>
    </div>

    <!-- AI Search Toggle -->
    <div class="discover-hero__ai-toggle">
      <label class="discover-hero__ai-switch">
        <input type="checkbox" id="ai-search-enabled" checked class="discover-hero__ai-checkbox">
        <span class="discover-hero__ai-slider"></span>
        <span class="discover-hero__ai-label">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 2L2 7l10 5 10-5-10-5z"/>
            <path d="M2 17l10 5 10-5M2 12l10 5 10-5"/>
          </svg>
          AI Search Enabled
        </span>
      </label>
    </div>

    <!-- Multi-Input Search Bar -->
    <form class="discover-hero__search-form" id="discover-hero-search-form">
      <div class="discover-hero__search-container">
        <!-- Natural Language Search -->
        <div class="discover-hero__search-field discover-hero__search-field--primary">
          <svg class="discover-hero__search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"/>
            <path d="m21 21-4.35-4.35"/>
          </svg>
          <input 
            type="text" 
            id="discover-hero-query"
            class="discover-hero__search-input"
            placeholder="Try 'Redhead in London'"
            autocomplete="off"
            aria-label="Search for talent"
          />
          <div class="discover-hero__suggestions" id="discover-hero-suggestions" role="listbox" aria-label="Search suggestions"></div>
        </div>

        <!-- Location Input -->
        <div class="discover-hero__search-field">
          <svg class="discover-hero__search-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
            <circle cx="12" cy="10" r="3"/>
          </svg>
          <input 
            type="text" 
            id="discover-hero-location"
            class="discover-hero__search-input"
            placeholder="Location"
            autocomplete="off"
            aria-label="Filter by location"
          />
          <div class="discover-hero__location-suggestions" id="discover-hero-location-suggestions" role="listbox"></div>
        </div>

        <!-- Height Dropdown -->
        <div class="discover-hero__search-field discover-hero__search-field--select">
          <svg class="discover-hero__search-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="12" y1="2" x2="12" y2="22"/>
            <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
          </svg>
          <select 
            id="discover-hero-height"
            class="discover-hero__search-select"
            aria-label="Filter by height"
          >
            <option value="">HEIGHT Any</option>
            <option value="150-160">5'0" - 5'3"</option>
            <option value="160-165">5'3" - 5'5"</option>
            <option value="165-170">5'5" - 5'7"</option>
            <option value="170-175">5'7" - 5'9"</option>
            <option value="175-180">5'9" - 5'11"</option>
            <option value="180-185">5'11" - 6'1"</option>
            <option value="185-190">6'1" - 6'3"</option>
            <option value="190-200">6'3" - 6'7"</option>
          </select>
          <svg class="discover-hero__select-arrow" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="6 9 12 15 18 9"/>
          </svg>
        </div>

        <!-- Search Button -->
        <button type="submit" class="discover-hero__search-btn" id="discover-hero-search-btn">
          <span>Search Network</span>
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12"/>
            <polyline points="12 5 19 12 12 19"/>
          </svg>
        </button>
      </div>
    </form>

    <!-- Recent Searches -->
    <div class="discover-hero__recent" id="discover-hero-recent" style="display: none;">
      <span class="discover-hero__recent-label">Recent:</span>
      <div class="discover-hero__recent-list" id="discover-hero-recent-list"></div>
    </div>
  </div>
</section>

<!-- View Controls & Results Count -->
<section class="discover-controls">
  <div class="discover-controls__left">
    <div class="discover-controls__results" id="discover-results-count">
      <!-- Results count will be populated by JavaScript -->
    </div>
    <div class="discover-controls__view-toggle" role="group" aria-label="View mode">
      <button 
        type="button" 
        class="discover-controls__view-btn discover-controls__view-btn--active" 
        data-view="grid"
        aria-label="Grid view"
        title="Grid view"
      >
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="3" y="3" width="7" height="7"/>
          <rect x="14" y="3" width="7" height="7"/>
          <rect x="14" y="14" width="7" height="7"/>
          <rect x="3" y="14" width="7" height="7"/>
        </svg>
      </button>
      <button 
        type="button" 
        class="discover-controls__view-btn" 
        data-view="list"
        aria-label="List view"
        title="List view"
      >
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="8" y1="6" x2="21" y2="6"/>
          <line x1="8" y1="12" x2="21" y2="12"/>
          <line x1="8" y1="18" x2="21" y2="18"/>
          <line x1="3" y1="6" x2="3.01" y2="6"/>
          <line x1="3" y1="12" x2="3.01" y2="12"/>
          <line x1="3" y1="18" x2="3.01" y2="18"/>
        </svg>
      </button>
    </div>
  </div>

  <div class="discover-controls__right">
    <div class="discover-controls__sort">
      <label for="discover-sort" class="discover-controls__sort-label">Sort:</label>
      <select id="discover-sort" class="discover-controls__sort-select">
        <option value="relevance">Relevance</option>
        <option value="newest">Newest First</option>
        <option value="az">A-Z</option>
        <option value="height">Height</option>
        <option value="location">Location</option>
      </select>
    </div>
  </div>
</section>
