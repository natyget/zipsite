<!-- Discover Page Header -->
<section class="agency-discover-header">
  <div class="agency-discover-header__content">
    <h1 class="agency-discover-header__title">Scout Talent</h1>
    <p class="agency-discover-header__subtitle">Global directory of discoverable models.</p>
    
    <div class="agency-discover-header__actions">
      <div class="agency-discover-header__search">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"/>
          <path d="m21 21-4.35-4.35"/>
        </svg>
        <input 
          type="text" 
          placeholder="Search by name, physical attributes, or keywords..." 
          class="agency-discover-header__search-input"
          id="discover-search-input"
        />
      </div>
      <button class="agency-discover-header__btn" id="discover-map-view">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
          <circle cx="12" cy="10" r="3"/>
        </svg>
        Map View
      </button>
      <button class="agency-discover-header__btn" id="discover-filters-toggle">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"/>
        </svg>
        Filters
      </button>
    </div>
  </div>
</section>

