  <!-- Scout Filter Sidebar -->
  <aside class="scout-filters" id="scout-filters">
    <div class="scout-filters__header">
      <h3 class="scout-filters__title">Filter Talent</h3>
      <button class="scout-filters__reset" id="scout-filters-reset" type="button">Clear All</button>
    </div>

    <!-- Quick Filter Presets -->
    <div class="scout-filters__presets">
      <p class="scout-filters__presets-label">Quick Filters</p>
      <div class="scout-filters__presets-list">
        <button type="button" class="scout-filters__preset" data-preset="new-faces">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <path d="M12 6v6l4 2"/>
          </svg>
          New Faces
        </button>
        <button type="button" class="scout-filters__preset" data-preset="runway">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 2L2 7l10 5 10-5-10-5z"/>
            <path d="M2 17l10 5 10-5M2 12l10 5 10-5"/>
          </svg>
          Runway
        </button>
        <button type="button" class="scout-filters__preset" data-preset="commercial">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="2" y="3" width="20" height="14" rx="2"/>
            <line x1="8" y1="21" x2="16" y2="21"/>
            <line x1="12" y1="17" x2="12" y2="21"/>
          </svg>
          Commercial
        </button>
      </div>
    </div>

    <form class="scout-filters__form" id="scout-filters-form">
      <input type="hidden" name="view" value="scout">
      
      <!-- Height Range with Slider -->
      <div class="scout-filters__group">
        <label class="scout-filters__label">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="12" y1="2" x2="12" y2="22"/>
            <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
          </svg>
          Height Range
        </label>
        <div class="scout-filters__range-slider">
          <div class="scout-filters__range-track">
            <input 
              type="range" 
              name="min_height" 
              id="scout-min-height-slider"
              min="120" 
              max="220"
              value="<%= safeFilters.min_height || 120 %>"
              class="scout-filters__range-input">
            <input 
              type="range" 
              name="max_height" 
              id="scout-max-height-slider"
              min="120" 
              max="220"
              value="<%= safeFilters.max_height || 220 %>"
              class="scout-filters__range-input">
          </div>
          <div class="scout-filters__range-inputs">
            <div class="scout-filters__range-input-wrapper">
              <label for="scout-min-height" class="scout-filters__range-label">Min</label>
              <input 
                type="number" 
                name="min_height" 
                id="scout-min-height"
                placeholder="120" 
                min="120" 
                max="220"
                value="<%= safeFilters.min_height || '' %>"
                class="scout-filters__input scout-filters__input--small">
            </div>
            <span class="scout-filters__range-separator">–</span>
            <div class="scout-filters__range-input-wrapper">
              <label for="scout-max-height" class="scout-filters__range-label">Max</label>
              <input 
                type="number" 
                name="max_height" 
                id="scout-max-height"
                placeholder="220" 
                min="120" 
                max="220"
                value="<%= safeFilters.max_height || '' %>"
                class="scout-filters__input scout-filters__input--small">
            </div>
          </div>
        </div>
      </div>

      <!-- Age Range with Slider -->
      <div class="scout-filters__group">
        <label class="scout-filters__label">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <polyline points="12 6 12 12 16 14"/>
          </svg>
          Age Range
        </label>
        <div class="scout-filters__range-slider">
          <div class="scout-filters__range-track">
            <input 
              type="range" 
              name="min_age" 
              id="scout-min-age-slider"
              min="16" 
              max="80"
              value="<%= safeFilters.min_age || 16 %>"
              class="scout-filters__range-input">
            <input 
              type="range" 
              name="max_age" 
              id="scout-max-age-slider"
              min="16" 
              max="80"
              value="<%= safeFilters.max_age || 80 %>"
              class="scout-filters__range-input">
          </div>
          <div class="scout-filters__range-inputs">
            <div class="scout-filters__range-input-wrapper">
              <label for="scout-min-age" class="scout-filters__range-label">Min</label>
              <input 
                type="number" 
                name="min_age" 
                id="scout-min-age"
                placeholder="16" 
                min="16" 
                max="80"
                value="<%= safeFilters.min_age || '' %>"
                class="scout-filters__input scout-filters__input--small">
            </div>
            <span class="scout-filters__range-separator">–</span>
            <div class="scout-filters__range-input-wrapper">
              <label for="scout-max-age" class="scout-filters__range-label">Max</label>
              <input 
                type="number" 
                name="max_age" 
                id="scout-max-age"
                placeholder="80" 
                min="16" 
                max="80"
                value="<%= safeFilters.max_age || '' %>"
                class="scout-filters__input scout-filters__input--small">
            </div>
          </div>
        </div>
      </div>

      <!-- City with Autocomplete -->
      <div class="scout-filters__group">
        <label class="scout-filters__label" for="scout-city">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
            <circle cx="12" cy="10" r="3"/>
          </svg>
          City
        </label>
        <div class="scout-filters__autocomplete">
          <input 
            type="text" 
            name="city" 
            id="scout-city"
            placeholder="e.g., New York, Paris"
            value="<%= safeFilters.city || '' %>"
            class="scout-filters__input"
            autocomplete="off">
          <div class="scout-filters__autocomplete-suggestions" id="scout-city-suggestions"></div>
        </div>
      </div>

      <!-- Gender -->
      <div class="scout-filters__group">
        <label class="scout-filters__label" for="scout-gender">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
            <circle cx="9" cy="7" r="4"/>
            <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
            <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
          </svg>
          Gender
        </label>
        <div class="scout-filters__checkbox-group">
          <label class="scout-filters__checkbox-option">
            <input 
              type="checkbox" 
              name="gender" 
              value="female"
              <%= safeFilters.gender === 'female' ? 'checked' : '' %>
              class="scout-filters__checkbox">
            <span class="scout-filters__checkbox-custom"></span>
            <span class="scout-filters__checkbox-text">Female</span>
          </label>
          <label class="scout-filters__checkbox-option">
            <input 
              type="checkbox" 
              name="gender" 
              value="male"
              <%= safeFilters.gender === 'male' ? 'checked' : '' %>
              class="scout-filters__checkbox">
            <span class="scout-filters__checkbox-custom"></span>
            <span class="scout-filters__checkbox-text">Male</span>
          </label>
          <label class="scout-filters__checkbox-option">
            <input 
              type="checkbox" 
              name="gender" 
              value="non-binary"
              <%= safeFilters.gender === 'non-binary' ? 'checked' : '' %>
              class="scout-filters__checkbox">
            <span class="scout-filters__checkbox-custom"></span>
            <span class="scout-filters__checkbox-text">Non-binary</span>
          </label>
          <label class="scout-filters__checkbox-option">
            <input 
              type="checkbox" 
              name="gender" 
              value="other"
              <%= safeFilters.gender === 'other' ? 'checked' : '' %>
              class="scout-filters__checkbox">
            <span class="scout-filters__checkbox-custom"></span>
            <span class="scout-filters__checkbox-text">Other</span>
          </label>
        </div>
      </div>

      <!-- Eye Color -->
      <div class="scout-filters__group">
        <label class="scout-filters__label" for="scout-eye-color">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
            <circle cx="12" cy="12" r="3"/>
          </svg>
          Eye Color
        </label>
        <div class="scout-filters__color-group">
          <button type="button" class="scout-filters__color-option <%= safeFilters.eye_color === 'blue' ? 'scout-filters__color-option--active' : '' %>" data-color="blue" data-filter="eye_color" style="background: #3b82f6;" title="Blue"></button>
          <button type="button" class="scout-filters__color-option <%= safeFilters.eye_color === 'brown' ? 'scout-filters__color-option--active' : '' %>" data-color="brown" data-filter="eye_color" style="background: #92400e;" title="Brown"></button>
          <button type="button" class="scout-filters__color-option <%= safeFilters.eye_color === 'green' ? 'scout-filters__color-option--active' : '' %>" data-color="green" data-filter="eye_color" style="background: #10b981;" title="Green"></button>
          <button type="button" class="scout-filters__color-option <%= safeFilters.eye_color === 'hazel' ? 'scout-filters__color-option--active' : '' %>" data-color="hazel" data-filter="eye_color" style="background: #d97706;" title="Hazel"></button>
          <button type="button" class="scout-filters__color-option <%= safeFilters.eye_color === 'gray' ? 'scout-filters__color-option--active' : '' %>" data-color="gray" data-filter="eye_color" style="background: #6b7280;" title="Gray"></button>
          <button type="button" class="scout-filters__color-option <%= safeFilters.eye_color === 'amber' ? 'scout-filters__color-option--active' : '' %>" data-color="amber" data-filter="eye_color" style="background: #f59e0b;" title="Amber"></button>
          <input type="hidden" name="eye_color" id="scout-eye-color" value="<%= safeFilters.eye_color || '' %>">
        </div>
      </div>

      <!-- Hair Color -->
      <div class="scout-filters__group">
        <label class="scout-filters__label" for="scout-hair-color">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="8" r="7"/>
            <path d="M8.21 13.89L7 23l5-3 5 3-1.21-9.11"/>
          </svg>
          Hair Color
        </label>
        <div class="scout-filters__color-group">
          <button type="button" class="scout-filters__color-option <%= safeFilters.hair_color === 'black' ? 'scout-filters__color-option--active' : '' %>" data-color="black" data-filter="hair_color" style="background: #0f172a;" title="Black"></button>
          <button type="button" class="scout-filters__color-option <%= safeFilters.hair_color === 'brown' ? 'scout-filters__color-option--active' : '' %>" data-color="brown" data-filter="hair_color" style="background: #92400e;" title="Brown"></button>
          <button type="button" class="scout-filters__color-option <%= safeFilters.hair_color === 'blonde' ? 'scout-filters__color-option--active' : '' %>" data-color="blonde" data-filter="hair_color" style="background: #fbbf24;" title="Blonde"></button>
          <button type="button" class="scout-filters__color-option <%= safeFilters.hair_color === 'red' ? 'scout-filters__color-option--active' : '' %>" data-color="red" data-filter="hair_color" style="background: #dc2626;" title="Red"></button>
          <button type="button" class="scout-filters__color-option <%= safeFilters.hair_color === 'auburn' ? 'scout-filters__color-option--active' : '' %>" data-color="auburn" data-filter="hair_color" style="background: #b91c1c;" title="Auburn"></button>
          <button type="button" class="scout-filters__color-option <%= safeFilters.hair_color === 'gray' ? 'scout-filters__color-option--active' : '' %>" data-color="gray" data-filter="hair_color" style="background: #6b7280;" title="Gray"></button>
          <button type="button" class="scout-filters__color-option <%= safeFilters.hair_color === 'white' ? 'scout-filters__color-option--active' : '' %>" data-color="white" data-filter="hair_color" style="background: #f3f4f6; border: 1px solid #d1d5db;" title="White"></button>
          <input type="hidden" name="hair_color" id="scout-hair-color" value="<%= safeFilters.hair_color || '' %>">
        </div>
      </div>
    </form>
  </aside>
