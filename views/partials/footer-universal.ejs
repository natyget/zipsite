                name="email" 
                placeholder="your@email.com" 
                class="universal-footer__newsletter-input"
                aria-label="Email address"
                required>
              <button type="submit" class="universal-footer__newsletter-button" aria-label="Subscribe">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
